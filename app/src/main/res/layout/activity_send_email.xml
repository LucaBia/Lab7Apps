<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".SendEmail">
    <Button
            android:text="enviarMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/design_default_color_primary"
            android:id="@+id/sendBtm"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/mensaje" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:hint="who"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/dest" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/tema" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"/>
    <EditText
            android:layout_width="336dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="asunto"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/tema" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/dest" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="33dp" android:layout_marginRight="33dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/mensaje"/>
    <EditText
            android:layout_width="342dp"
            android:layout_height="231dp"
            android:inputType="textPersonName"
            android:hint="msg"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/mensaje" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/sendBtm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp" android:layout_marginRight="26dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tema"/>
    <Button
            android:text="btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/design_default_color_primary"
            android:onClick="onClick_Back"
            android:id="@+id/button6" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/mensaje" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp" app:layout_constraintEnd_toStartOf="@+id/sendBtm"
            android:layout_marginEnd="86dp" android:layout_marginRight="86dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>