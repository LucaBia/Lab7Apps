<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/colorCardView">

        <TextView
                android:id="@+id/text_view_phone"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Telefono"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/text_view_name"
                android:layout_width="116dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_view_phone"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nombre"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignTop="@+id/text_view_phone" android:layout_marginStart="65dp"
                android:layout_marginEnd="76dp" android:layout_marginTop="-1dp"/>

        <TextView
                android:id="@+id/text_view_mail"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_name"
                android:text="Correo" android:layout_alignParentStart="true" android:layout_marginTop="-3dp"
                android:layout_marginStart="65dp" android:textSize="14sp" android:textAllCaps="false"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/text_view_priority"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignEnd="@+id/text_view_mail"
                android:layout_marginTop="0dp" android:layout_marginEnd="41dp"
                android:layout_alignParentStart="true"
                android:ellipsize="end" android:layout_marginStart="18dp" android:textStyle="bold"
                android:textSize="30sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>